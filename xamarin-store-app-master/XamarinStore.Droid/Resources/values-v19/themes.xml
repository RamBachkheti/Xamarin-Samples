<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Colors -->
	<color name="main_background">#eeeeee</color>
	<color name="action_bar_title_color">#5c5c5c</color>
	<color name="ab_background">#ffffff</color>
	<color name="ab_bottom_shadow_1">#30000000</color>
	<color name="ab_bottom_shadow_2">#20000000</color>

	<!-- Styles -->
	<style name="XamActionBarTheme" parent="@android:style/Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/XamActionBarStyle</item>
		<item name="android:windowBackground">@color/main_background</item>

		<!-- Translucent Action Bar for API 19 -->
		<item name="android:windowTranslucentNavigation">false</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="XamActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:titleTextStyle">@style/XamActionBarTitleStyle</item>

		<!-- Translucent Action Bar for API 19 -->
		<item name="android:background">@android:color/transparent</item>
		<!-- <item name="android:background">@drawable/ab_background</item> -->
		<item name="android:backgroundStacked">@drawable/ab_background</item>
		<item name="android:displayOptions">showTitle|homeAsUp|showHome|useLogo</item>
		<item name="android:logo">@android:color/transparent</item>
	</style>

	<style name="XamActionBarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@color/action_bar_title_color</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>